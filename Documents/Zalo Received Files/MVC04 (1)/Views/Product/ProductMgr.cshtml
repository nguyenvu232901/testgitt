<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .auth-nav {
            display: flex;
            gap: 15px; /* Space between links */
        }

        .auth-link {
            text-decoration: none;
            color: #007b00;
            font-weight: bold;
            padding: 8px 12px;
            border-radius: 4px;
        }

            .auth-link:hover {
                background-color: #e2e6e9;
                color: #005d00;
            }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background-color: #f8f9fa;
            border-bottom: 1px solid #ddd;
        }

            .header h1 {
                margin: 0;
            }

        .cart-icon {
            position: relative;
            cursor: pointer;
        }

            .cart-icon img {
                width: 40px;
                height: auto;
            }

            .cart-icon .item-count {
                position: absolute;
                top: -10px;
                right: -10px;
                background: red;
                color: white;
                border-radius: 50%;
                padding: 5px;
                font-size: 12px;
                font-weight: bold;
            }

        .product-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            padding: 20px;
        }

        .product-card {
            width: calc(33.33% - 20px);
            margin: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            overflow: hidden;
        }

            .product-card img {
                max-width: 100%;
                height: auto;
            }

            .product-card .product-details {
                padding: 10px;
            }

            .product-card h5 {
                font-size: 20px;
                font-weight: bold;
            }

            .product-card .product-price {
                text-align: right;
                color: #007b00;
                font-weight: bold;
            }

            .product-card .product-description {
                margin-top: 10px;
            }

            .product-card .add-to-cart-button {
                display: block;
                width: 50%;
                padding: 10px;
                background-color: #007b00;
                color: #fff;
                border: none;
                cursor: pointer;
                text-align: center;
            }
    </style>
</head>
<body>
    <div class="header">
        <h1>Product List</h1>
        <nav class="auth-nav">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Account" asp-action="Logout" class="auth-link">Đăng xuất</a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="auth-link">Đăng nhập</a>
            }
        </nav>
    </div>
    <div class="product-list">
        @foreach (var product in Model)
        {
            <div class="product-card">
                <div class="product-price">@product.ProductPrice</div>
                <div>
                    <a asp-controller="Product" asp-action="ProductDetail" asp-route-id="@product.ProductID" style="text-decoration: none; color: inherit;">
                        <img src="@product.ImageURL" alt="Product Image" />
                    </a>
                </div>
                <div class="product-details">
                    <a asp-controller="Product" asp-action="ProductDetail" asp-route-id="@product.ProductID" style="text-decoration: none; color: inherit;">
                        <h5>@product.ProductName</h5>
                        <p class="product-description">@product.Description</p>
                    </a>
                    <button class="add-to-cart-button" onclick="addToCart(@product.ProductID);">Add to Cart</button>
                </div>
            </div>
        }
    </div>
    <script>
        function addToCart(productId) {
            // Add your add to cart logic here
            console.log('Added product ' + productId + ' to cart.');
        }
    </script>
</body>
</html>
