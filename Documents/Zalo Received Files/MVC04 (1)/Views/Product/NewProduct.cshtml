<div class="container">
    <form asp-action="AddProduct" method="post" asp-controller="Product" class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="ProductID">ID mặt hàng: </label>
                <input type="text" class="form-control" id="ProductID" name="ProductID" required>
            </div>
            <div class="form-group">
                <label for="ProductName">Tên mặt hàng: </label>
                <input type="text" class="form-control" id="ProductName" name="ProductName" required>
            </div>
            <div class="form-group">
                <label for="ImageUrl">Image URL: </label>
                <input type="text" class="form-control" id="ImageUrl" name="ImageUrl">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="ProductPrice">Đơn giá mặt hàng: </label>
                <input type="text" class="form-control" id="ProductPrice" name="ProductPrice" required>
            </div>
            <div class="form-group">
                <label for="Description">Mô tả: </label>
                <textarea class="form-control" id="Description" name="Description"></textarea>
            </div>
        </div>
        <div class="col-12 text-center">
            <button type="submit" style="margin-top:10px" class="btn btn-primary float-right">Thêm sản phẩm mới</button>
        </div>
    </form>
</div>
